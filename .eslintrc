{
  "parser": "babel-eslint",
  "env": {
    "browser": false,
    "node": true
  },
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "plugins": [
    "flowtype",
    "react"
  ],
  "rules": {
    "space-before-function-paren": 0,
    "comma-dangle": ["error", "always-multiline"]
  },
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "16"
    }
  }
}
